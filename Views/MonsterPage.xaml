<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GroupProject_DD.MonsterPage" Title="Monster List">
	<StackLayout Spacing="10" x:Name="layout">
      <Button Text="Create Monster" VerticalOptions="Center" HorizontalOptions="Center" FontSize="40" BackgroundColor="Lime" Margin="20" Clicked="AddMonsterBtnClicked"/>
		<ListView x:Name="MonsterListView" ItemSelected="OnMonsterSelected" ItemsSource="{Binding Path=Monsters}">
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<StackLayout Orientation="Horizontal" Padding="5">
						<StackLayout HorizontalOptions="CenterAndExpand">
							<Label Text="{Binding Name}" />
						</StackLayout>
						<Label Text="Detail" HorizontalOptions="End" TextColor="Blue"/>
					</StackLayout>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
    </StackLayout>
</ContentPage>
